{
    "name": "grader-apps-script",
    "version": "1.0.0",
    "description": "Google Apps Script project for grading functionality",
    "main": "index.js",
    "scripts": {
        "build": "webpack --mode=production",
        "build:dev": "webpack --mode=development",
        "watch": "webpack --mode=development --watch",
        "type-check": "tsc --noEmit",
        "push": "npm run build && clasp push",
        "push:dev": "npm run build:dev && clasp push",
        "deploy": "npm run build && clasp deploy",
        "open": "clasp open",
        "logs": "clasp logs",
        "setup": "clasp create --type standalone --title 'Grader Apps Script'"
    },
    "devDependencies": {
        "@google/clasp": "^2.4.2",
        "@types/google-apps-script": "^1.0.83",
        "copy-webpack-plugin": "^13.0.1",
        "gas-webpack-plugin": "^2.6.0",
        "ts-loader": "^9.5.4",
        "typescript": "^5.3.3",
        "webpack": "^5.101.3",
        "webpack-cli": "^6.0.1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "google-apps-script",
        "typescript",
        "clasp",
        "grader"
    ],
    "author": "",
    "license": "MIT"
}